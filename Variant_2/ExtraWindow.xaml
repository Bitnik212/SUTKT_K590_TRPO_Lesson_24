<Window x:Class="Variant_2.ExtraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Variant_2"
        mc:Ignorable="d"
        Title="ExtraWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ComboBox Name="list" SelectionChanged="display" Grid.Row="0" Margin="10" Padding="5"/>
        <Image Name="imager" Margin="10,0" Grid.Row="1"/>
        <Button Content="Сохранить изображение" Click="save" Grid.Row="2" Margin="10" Padding="5"/>
    </Grid>
</Window>
